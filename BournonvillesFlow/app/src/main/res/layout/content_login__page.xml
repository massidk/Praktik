<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lora.bournonvillesflow.Login_Page"
    tools:showIn="@layout/activity_login__page"
    android:background="@drawable/brevpapir">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_alignParentTop="true"
        android:id="@+id/userId_text"
        android:text="Skriv brugernavn her"
        android:textSize="18dp"
        android:textStyle="bold"/>
        
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_userText"
        android:layout_below="@+id/userId_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_Text"
        android:hint="Skriv pasword her"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_passwordText"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/edit_userText"
        android:layout_alignBottom="@+id/edit_userText"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button" />

    <Button
        style="@style/BournonvilleButton"
        android:text="Login"
        android:id="@+id/login_button"
        android:layout_below="@+id/edit_passwordText"
        android:layout_centerHorizontal="true" />
    <Button
        style="@style/BournonvilleButton"
        android:text="Registrer"
        android:id="@+id/login_ToReg_button"
        android:layout_below="@+id/login_button"
        android:layout_marginBottom="5dp" />


</RelativeLayout>
</ScrollView>