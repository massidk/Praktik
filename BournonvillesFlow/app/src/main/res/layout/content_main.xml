<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@drawable/brevpapir">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        style="@style/BournonvilleButton"
        android:text="@string/kontakt_Button_text"
        android:id="@+id/kontaktButton"
        android:layout_marginTop="250dp"
        android:onClick="onClick"/>

    <Button
        style="@style/BournonvilleButton"
        android:text="Om Bournonvilles Wild West"
        android:id="@+id/om_B_Button"
        android:onClick="onClickInfo"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/kontaktButton"/>

    </RelativeLayout>

</ScrollView>
